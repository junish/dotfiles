#!/bin/sh

# 初代MacbookAirのキーボードライトを操作するスクリプト

BRIGHT=$1
if [ "$BRIGHT" == "" ]; then
    # bright control off
    sudo su -c "echo 0 > /sys/devices/platform/applesmc.768/leds/smc\:\:kbd_backlight/brightness" 
else
    # bright control on
    sudo su -c "echo 0 > /sys/devices/platform/applesmc.768/leds/smc\:\:kbd_backlight/brightness" 
    [ $BRIGHT -lt 0 ] && BRIGHT=0
    [ 255 -lt $BRIGHT ] && BRIGHT=255
    sudo su -c "echo $BRIGHT > /sys/devices/platform/applesmc.768/leds/smc\:\:kbd_backlight/brightness" 
fi
