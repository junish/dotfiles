set mbox_type=Maildir

# GMAIL+OFFLINEIMAP settings
set folder=$HOME/.mail/GMAIL
set spoolfile=+/INBOX
set postponed="+[Gmail].Drafts"
set record="+[Gmail].Sent Mail"

# Mailboxes via offlineimap
source $HOME/.mutt/muttrc.mailboxes

# Send mail
#set smtp_url="smtp://jyunichi.shinohara@g.hde.co.jp@smtp.gmail.com:587"
set sendmail="/usr/bin/msmtp -a default"

# KeyBind
macro index G "! offlineimap<enter>" "run offlineimap command"
